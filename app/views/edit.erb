<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" name="recipe[name]" id="name">
  <input type="text" name="recipe[cook_time]" id="cook_time">
  <input type="text" name="recipe[ingredients]" id="ingredients" value="<%= @recipe.ingredients %>">
  <input type="submit" name="submit" id="submit">
</form> 